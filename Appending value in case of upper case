var str = "Robin Singh from USA.";
var res = "";
for(var i = 0;i <str.length ; i++)
{
    if(str[i] == " ")
    {
        res = res + "-";

    }
    else
    {
        res = res + str[i];
    }
}
console.log(res.toLowerCase());
